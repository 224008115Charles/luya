#!/usr/bin/env php
<?php


// use the luya boot wrapping class

$loaders = [
	'vendor/autoload.php',
	__DIR__ . '/../vendor/autoload.php',
	__DIR__ . '/../../vendor/autoload.php',
];


foreach($loaders as $file) {
	if (file_exists($file)) {
		require($file);
		$vendor = pathinfo($file, PATHINFO_DIRNAME);
	}
}

$boot = new \luya\Boot();
$boot->setConfigPath('configs/');
$boot->setYiiPath($vendor . '/yiisoft/yii2/Yii.php');
$boot->applicationCli();