{
	"name" : "zephir/luya",
	"type" : "library",
	"description" : "Zephir Luya Yii2 Cms",
	"keywords" : ["php", "yii2", "cms", "luya", "programmatic", "content", "angular"],
	"homepage" : "https://github.com/zephir/luya",
	"minimum-stability": "dev",
	"authors" : [
		{
			"name" : "nadar",
			"homepage" : "https://github.com/nadar",
			"role" : "Creator"
		}
	],
	"require" : {
		"php": ">=5.4.0",
		"yiisoft/yii2": "2.0.5",
		"twig/twig" : "1.*@stable",
		"ext-curl" : "*",
        "curl/curl" : "1.2.0",
        "phpmailer/phpmailer": "5.2.*@stable"
	},
	"require-dev" : {
		"yiisoft/yii2-debug" : "2.0.4",
		"phpunit/phpunit" : "@stable",
		"fabpot/php-cs-fixer" : "@stable"
	},
	"autoload" : {
		"psr-4" : {
			"luya\\" : "src/"
		}
	},
	"autoload-dev": {
        "psr-4": {
            "tests\\": "tests/"
        }
    },
	"extra": {
    	"asset-installer-paths": {
            "bower-asset-library": "vendor/bower"
        }
    }
}
