{
	"name" : "zephir/luya",
	"type" : "library",
	"description" : "Zephir Luya Library",
	"keywords" : ["php", "yii2"],
	"homepage" : "https://github.com/zephir/luya",
	"authors" : [
		{
			"name" : "nadar",
			"homepage" : "https://github.com/nadar",
			"role" : "Creator"
		}
	],
	"require" : {
		"php": ">=5.4.0",
		"yiisoft/yii2": "2.0.*@stable",
		"twig/twig" : "1.*@stable"
	},
	"require-dev" : {
		"yiisoft/yii2-debug" : "*@stable",
		"phpunit/phpunit" : "@stable",
		"fabpot/php-cs-fixer" : "@stable"
	},
	"autoload" : {
		"psr-4" : {
			"luya\\" : "src/",
			"admin\\" : "modules/admin",
			"cms\\" : "modules/cms",
			"cmsadmin\\" : "modules/cmsadmin"
		}
	},
	"extra": {
    	"asset-optimize-with-installed-packages": true,
    	"asset-pattern-skip-version": "(-build)",
    	"asset-optimize-with-conjunctive": false,
    	"asset-installer-paths": {
            "bower-asset-library": "vendor/bower"
        }
    }
}
